{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run C++ (global for all folders)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-Command",
        "if ('${fileExtname}' -ieq '.cpp') { " +
          "Set-Location '${fileDirname}'; " +
          "g++ -std=c++17 '${file}' -o '${fileBasenameNoExtension}.exe'; " +
          "if ($?) { .\\'${fileBasenameNoExtension}.exe' < input.txt > output.txt; " +
          "Write-Host '✅ Output written to output.txt in the current folder' } " +
        "} else { Write-Host 'Please open a .cpp file first.' }"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run last exe (global for all folders)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-Command",
        "Set-Location '${fileDirname}'; " +
        ".\\'${fileBasenameNoExtension}.exe' < input.txt > output.txt; " +
        "Write-Host '✅ Output written to output.txt in the current folder'"
      ],
      "group": "none",
      "problemMatcher": []
    }
  ]
}
